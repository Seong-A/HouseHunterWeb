<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HouseHunter</title>
    <link rel="stylesheet" href="/stylesheets/map.css">
    <script>
        function loadHeader() {
            fetch('/header') 
                .then(response => response.text())
                .then(data => {
                    document.getElementById('header-container').innerHTML = data;
                    document.querySelector('.login-button').addEventListener('click', function() {
                        checkLogin(); 
                    });
                    updateUI();
                })
                .catch(error => console.error('Error:', error));
        }
        
        window.onload = function() {
            loadHeader();
            registerRoomtypesHandlers();
            registerDepositFilterHandlers();
            registerMonthlyFilterHandlers();
            registerManagementFilterHandlers();
            displayMarkersOnMap();
        };

        async function checkLogin() {
            try {
                const response = await fetch('/check-login');
                const data = await response.json();

                if (data.isLoggedIn) {
                    window.location.href = '/mypage';
                } else {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        async function updateUI() {
            try {
                const response = await fetch('/check-login');
                const userData = await response.json();
                const userNameDisplay = document.querySelector('.user-name');

                if (userData.isLoggedIn) {
                    const loginButton = document.querySelector('.login-button');
                    loginButton.style.display = 'none'; 
                    userNameDisplay.textContent = userData.userName; 
                    userNameDisplay.style.display = 'inline-block';
                } else {
                    userNameDisplay.style.display = 'none'; 
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }

        function registerRoomtypesHandlers() {
            // 방유형 클릭하면 항목 나타남
            document.querySelector('.roomfilter').addEventListener('click', function() {
                const filterContent = document.querySelector('.filter-content.roomfilter-content');
                const applyButton = document.getElementById('applyRoomTypesButton');
                
                if (filterContent.style.display === 'none') {
                    filterContent.style.display = 'block';
                    applyButton.style.display = 'block';
                } else {
                    filterContent.style.display = 'none';
                    applyButton.style.display = 'none';
                }
            });

            // 항목 클릭하면 방유형에 선택한 내용 나타남
            document.querySelectorAll('.applyRoomTypesButton').forEach(function(button) {
                button.addEventListener('click', function() {
                    const selectedRoomTypes = document.querySelectorAll('.roomfilter-content input[type="checkbox"]:checked');
                    const selectedRoomTypesContainer = document.getElementById('selectedRoomTypes');
                    const roomTypeContainer = document.getElementById('roomtype');

                    selectedRoomTypesContainer.innerHTML = '';
                    roomTypeContainer.textContent = '';

                    selectedRoomTypes.forEach(function(checkbox, index) {
                        const roomType = checkbox.value;

                        const pElement = document.createElement('p');
                        pElement.textContent = roomType;
                        selectedRoomTypesContainer.appendChild(pElement);

                        roomTypeContainer.textContent += roomType;
                        if (index !== selectedRoomTypes.length - 1) {
                            roomTypeContainer.textContent += ', ';
                        }
                    });

                    if (selectedRoomTypes.length > 0) {
                        roomTypeContainer.style.display = 'block';
                        selectedRoomTypesContainer.style.display = 'none';
                    } else {
                        roomTypeContainer.style.display = 'none';
                        selectedRoomTypesContainer.style.display = 'none';
                    }

                    // 적용하기 누르면 항목 사라짐
                    const filterContent = document.querySelector('.filter-content.roomfilter-content');
                    const applyButton = document.getElementById('applyRoomTypesButton');
                    filterContent.style.display = 'none';
                    applyButton.style.display = 'none';
                });
            });
        }


        function registerDepositFilterHandlers() {
            // 보증금 클릭하면 입력창 나타남
            document.querySelector('.depositfilter').addEventListener('click', function() {
                const filterContent = document.querySelector('.filter-content.depositfilter-content');
                const applyButton = document.getElementById('applyDepositButton');
                
                if (filterContent.style.display === 'none') {
                    filterContent.style.display = 'block';
                    applyButton.style.display = 'block';
                } else {
                    filterContent.style.display = 'none';
                    applyButton.style.display = 'none';
                }
            });

            // 적용하기 버튼 누르면 항목들 사라짐
            document.getElementById('applyDepositButton').addEventListener('click', function() {
                const depositValue = document.getElementById('depositInput').value;
                console.log('Deposit:', depositValue);

                const filterContent = document.querySelector('.filter-content.depositfilter-content');
                const applyButton = document.getElementById('applyDepositButton');
                filterContent.style.display = 'none';
                applyButton.style.display = 'none';

                document.getElementById('deposittype').textContent = "보증금 : " + depositValue;

            });

            document.getElementById('depositInput').addEventListener('input', function() {
                let depositValue = parseInt(this.value.replace(/[^0-9]/g, ''));

                // 최대값 설정
                const maxDeposit = 10000; // 1억
                if (depositValue > maxDeposit) {
                    depositValue = maxDeposit;
                }

                // 입력된 값을 다시 보증금 입력란에 설정
                this.value = depositValue.toLocaleString() + " 만원"; 
                document.getElementById('deposittype').textContent = depositValue.toLocaleString() + " 만원";
            });
        }

        function registerMonthlyFilterHandlers() {
            // 월세 클릭하면 입력창 나타남
            document.querySelector('.monthlyfilter').addEventListener('click', function() {
                const filterContent = document.querySelector('.filter-content.monthlyfilter-content');
                const applyButton = document.getElementById('applyMonthlyButton');
                
                if (filterContent.style.display === 'none') {
                    filterContent.style.display = 'block';
                    applyButton.style.display = 'block';
                } else {
                    filterContent.style.display = 'none';
                    applyButton.style.display = 'none';
                }
            });

            // 적용하기 버튼 누르면 항목들 사라짐
            document.getElementById('applyMonthlyButton').addEventListener('click', function() {
                const monthlyValue = document.getElementById('monthlyInput').value;
                console.log('Monthly:', monthlyValue);

                const filterContent = document.querySelector('.filter-content.monthlyfilter-content');
                const applyButton = document.getElementById('applyMonthlyButton');
                filterContent.style.display = 'none';
                applyButton.style.display = 'none';

                document.getElementById('monthlytype').textContent = "월세 : " + monthlyValue;

            });

            document.getElementById('monthlyInput').addEventListener('input', function() {
                let monthlyValue = parseInt(this.value.replace(/[^0-9]/g, ''));

                // 최대값 설정
                const maxMonthly = 150; // 150만원
                if (monthlyValue > maxMonthly) {
                    monthlyValue = maxMonthly;
                }

                // 입력된 값을 다시 월세 입력란에 설정
                this.value = monthlyValue.toLocaleString() + " 만원"; 
                document.getElementById('monthlytype').textContent = monthlyValue.toLocaleString() + " 만원";
            });

        }

        function registerManagementFilterHandlers() {
            // 관리비 클릭하면 입력창 나타남
            document.querySelector('.managementfilter').addEventListener('click', function() {
                const filterContent = document.querySelector('.filter-content.managementfilter-content');
                const applyButton = document.getElementById('applyManagementButton');
                
                if (filterContent.style.display === 'none') {
                    filterContent.style.display = 'block';
                    applyButton.style.display = 'block';
                } else {
                    filterContent.style.display = 'none';
                    applyButton.style.display = 'none';
                }
            });

            // 적용하기 버튼 누르면 항목들 사라짐
            document.getElementById('applyManagementButton').addEventListener('click', function() {
                const managementValue = document.getElementById('managementInput').value;
                console.log('Management:', managementValue);

                const filterContent = document.querySelector('.filter-content.managementfilter-content');
                const applyButton = document.getElementById('applyManagementButton');
                filterContent.style.display = 'none';
                applyButton.style.display = 'none';

                document.getElementById('managementtype').textContent = "관리비 : " + managementValue;

            });

            document.getElementById('managementInput').addEventListener('input', function() {
                let managementValue = parseInt(this.value.replace(/[^0-9]/g, ''));

                // 최대값 설정
                const maxManagement = 30; // 30만원
                if (managementValue > maxManagement) {
                    managementValue = maxManagement;
                }

                // 입력된 값을 다시 관리비 입력란에 설정
                this.value = managementValue.toLocaleString() + " 만원"; 
                document.getElementById('managementtype').textContent = managementValue.toLocaleString() + " 만원";
            });
        }
    </script>
</head>
<body>
    <div id="header-container"></div>
    <div class="container">
        <h1>🔎 원하는 조건으로 방 구하기</h1>
        <div class="filter-container">
            <div class="filter">
                <button class="roomfilter">
                    <p id="roomtype">방유형</p>
                </button>
                <div class="filter-content roomfilter-content">
                    <label><input type="checkbox" value="원룸">원룸</label>
                    <label><input type="checkbox" value="투·쓰리룸">투·쓰리룸</label>
                    <label><input type="checkbox" value="오피스텔">오피스텔</label>
                    <label><input type="checkbox" value="아파트">아파트</label>
                </div>
                <button class="applyRoomTypesButton" id="applyRoomTypesButton">적용하기</button>
            </div>
           
            <div class="filter">
                <button class="depositfilter">
                    <p id="deposittype">보증금</p>
                </button>
                <div class="filter-content depositfilter-content">
                    <input type="text" id="depositInput" placeholder="보증금을 입력하세요">
                </div>
                <button id="applyDepositButton">적용하기</button>
            </div>

            <div class="filter">
                <button class="monthlyfilter">
                    <p id="monthlytype">보증금</p>
                </button>
                <div class="filter-content monthlyfilter-content">
                    <input type="text" id="monthlyInput" placeholder="월세를 입력하세요">
                </div>
                <button id="applyMonthlyButton">적용하기</button>
            </div>

            <div class="filter">
                <button class="managementfilter">
                    <p id="managementtype">관리비</p>
                </button>
                <div class="filter-content managementfilter-content">
                    <input type="text" id="managementInput" placeholder="관리비를 입력하세요">
                </div>
                <button id="applyManagementButton">적용하기</button>
            </div>


        </div>
        <div id="selectedRoomTypes"></div>
        <section class="section" id="section">
            <div class="map" id="map"></div>
            <code id="snippet" class="snippet"></code>
        </section>
    </div>

    <script type="text/javascript" src="https://openapi.map.naver.com/openapi/v3/maps.js?ncpClientId=<%= naverMapAPIClientID %>"></script>
    <script>
        var mapDiv = document.getElementById('map');
        var map = new naver.maps.Map(mapDiv);

        async function displayMarkersOnMap() {
            try {
                // 데이터베이스에서 위도(latitude)와 경도(longitude) 데이터를 가져옵니다.
                const response = await fetch('/get-locations-from-database'); // 적절한 엔드포인트를 사용하세요
                const locationsData = await response.json();

                // 지도를 표시할 div 요소를 가져옵니다.
                const mapDiv = document.getElementById('map');

                // 지도의 중심 좌표를 설정합니다. 예시로 첫 번째 위치를 중심으로 설정합니다.
                const firstLocation = locationsData[0];
                const mapCenter = new naver.maps.LatLng(firstLocation.latitude, firstLocation.longitude);

                // 지도를 생성합니다.
                const map = new naver.maps.Map(mapDiv, {
                    center: mapCenter, // 중심 좌표 설정
                    zoom: 13 // 지도 확대 레벨 설정
                });

                // 데이터베이스에서 가져온 모든 위치에 대해 마커를 생성하고 지도에 표시합니다.
                locationsData.forEach(location => {
                    const markerPosition = new naver.maps.LatLng(location.latitude, location.longitude);
                    const marker = new naver.maps.Marker({
                        position: markerPosition, // 마커 위치 설정
                        map: map // 마커를 표시할 지도 객체 설정
                    });
                });
            } catch (error) {
                console.error('Error:', error);
            }
        }
    </script>
</body>
</html>
